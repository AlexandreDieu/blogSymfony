{% extends 'base.html.twig' %}

{% block body %}
	<article>
		<h2>{{ article.title }}</h2>
		<div class="metadata">
			Ecrit le
			{{ article.createdAt | date('d/m/Y') }}
			à
			{{ article.createdAt | date('H:i') }}
			dans la catégorie
			{{ article.category.name }}
		</div>
		<div class="content">
			<img src="{{ article.image }}" alt="">
			<p>
				{{ article.content }}
			</p>
		</div>
	</article>
	<hr>
	<article class="w-50 m-auto">{{ form(form, { 'attr': {'placeholder': "Comment"} })}}</article>
	<section id="comments">
		{% for comment in article.comments %}
			<div class="row border-top border-primary">
				<div class="col-3">
					{{ comment.user.email }}
					(<small>{{ comment.createdAt | date('d/m/Y à H:i') }}</small>)
				</div>
				<div class="col">
					{{ comment.content }}
				</div>
			</div>
		{% endfor %}
	</section>
{% endblock %}
