<main>
	<h1></h1>
	<p>
		<table class="table">
			<thead>
				<tr>
					<th>Détails</th>
					<th>Texte</th>
					<th>Image</th>
				</tr>
			</thead>
			<tbody class="table table-bordered">
				{% for article in articles %}
					<tr>
						<td>
							<p>{{ article.title}}</p>
							<p>
								{{ article.createdAt | date('d/m/Y') }}
								à
								{{ article.createdAt | date('H:i')}}
							</p>
							<p>{{ article.comments | length ~ " commentaires"}}</p>

						</td>
						<td>
							<p>{{ article.content | length > 200 ? article.content | slice (0,200) ~ '...' : article.content }}</p>
							<p>
								<a href="{{ path('show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
							</p>
						</td>
						<td>
							<img src="{{ article.image}}" alt="">
						</td>
						{# <td>{{ article.status}}</td> #}
						{# <td>{{ article.category.title}}</td> #}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</p>
</main>
